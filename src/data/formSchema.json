{
  "steps": [
    {
      "step": 1,
      "title": "Aadhaar Verification",
      "fields": [
        {
          "name": "aadhaarNumber",
          "label": "Aadhaar Number",
          "type": "text",
          "required": true,
          "validation": "^[0-9]{12}$",
          "placeholder": "Enter 12-digit Aadhaar Number"
        },
        {
          "name": "sendOtpButton",
          "label": "Send OTP",
          "type": "button",
          "required": false
        },
        {
          "name": "otp",
          "label": "OTP",
          "type": "text",
          "required": true,
          "validation": "^[0-9]{6}$",
          "placeholder": "Enter 6-digit OTP"
        }
      ]
    },
    {
      "step": 2,
      "title": "PAN Validation",
      "fields": [
        {
          "name": "panNumber",
          "label": "PAN Number",
          "type": "text",
          "required": true,
          "validation": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$",
          "placeholder": "Enter your PAN Number"
        },
        {
          "name": "pincode",
          "label": "PIN Code",
          "type": "text",
          "required": false,
          "validation": "^[1-9][0-9]{5}$",
          "placeholder": "Enter 6-digit PIN"
        },
        {
          "name": "city",
          "label": "City",
          "type": "text",
          "required": false,
          "placeholder": "City (auto-filled)"
        },
        {
          "name": "state",
          "label": "State",
          "type": "text",
          "required": false,
          "placeholder": "State (auto-filled)"
        }
      ]
    }
  ]
}
